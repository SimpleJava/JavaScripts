import java.util.Scanner;
class Revision
{
   public static void main(String args[])
   {
      System.out.print("Enter the radius: ");
      Scanner scan = new Scanner(System.in);
       
      //User inputs radius diameter
      double radius = scan.nextDouble();
      
      //Area = πr2
      double area = Math.PI * (radius * radius);
      System.out.println("The area of circle is: " + area);
      
      //Circumference = 2πr
      double circumference = Math.PI * 2 * radius;
      System.out.println("The circumference of the circle is: "+circumference);
      
      //Surface Area of a Sphere = 4πr2
      double sphereSurfaceArea = Math.PI * 4 * (radius * radius);
      System.out.println("The surface area of a sphere with a radius of " + radius + " is: " + sphereSurfaceArea);
      
      //Volume of a Sphere = πr3
      double sphereVolume = Math.PI * (4.00 / 3.00) * (radius * radius * radius); 
      System.out.println("The volume of a sphere with a radius of " + radius + " is: " + sphereVolume);
   }
}
